<Window x:Class="Sapp.LoadingBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsScreen" Height="54" Width="320" WindowStyle = "None" 
        AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >

    <Grid>
        <Rectangle HorizontalAlignment="Stretch" Name="MainRectangle" Stroke="#00000000" VerticalAlignment="Stretch"
                   Canvas.Left="0" Canvas.Top="0" Fill="#FF939393" MouseDown="MouseDownOnWindow">

        </Rectangle>
        <ProgressBar Name="pbGamesLoaded" HorizontalAlignment="Left" Height="20" Margin="10,24,0,0" VerticalAlignment="Top" Width="300"/>
        <ProgressBar Name="pbGamesMarquee" HorizontalAlignment="Left" Height="20" Margin="10,24,0,0" VerticalAlignment="Top" Width="300" IsIndeterminate="True" Visibility="Hidden"/>
        
        <Label Name="lblMessage" Content="Starting Up..." HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top"/>
        <Label Name="lblPercent" Content="0%" HorizontalAlignment="Left" Margin="146,20,0,0" VerticalAlignment="Top"/>
        
    </Grid>
</Window>
