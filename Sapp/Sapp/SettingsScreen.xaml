<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sapp" x:Class="Sapp.SettingsScreen"
        Title="SettingsScreen" Height="256.889" Width="300" WindowStyle = "None" 
        AllowsTransparency="True" ResizeMode="NoResize" SizeChanged="WindowSizeChanged" WindowStartupLocation="CenterScreen">



    <Grid Margin="0,0,0,-0.333">

        <Rectangle HorizontalAlignment="Stretch" x:Name="MainRectangle" Stroke="{DynamicResource MainBorderColor}" VerticalAlignment="Stretch" MouseDown="MouseDownOnWindow" 
			Canvas.Left="0" Canvas.Top="0" Fill="{DynamicResource BGGradient}" StrokeThickness="0" Margin="0,0,2,0"/>

        <Border x:Name="MainWindowBorder" BorderBrush="{DynamicResource MainBorderColor}" BorderThickness="0,0,2,2" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}" 
    		Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}"/>


            <TabItem Header="Settings">
                <Grid>
                    <Border CornerRadius="6"
        	        BorderBrush="{StaticResource BordersColor}"
        	        BorderThickness="2"
                    Margin="10,30,9.667,56"
                    MouseDown="MouseDownOnWindow"/>

                    <Label Content="ADDITIONAL COLUMNS" HorizontalAlignment="Left" Margin="8,2,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}" FontSize="16" FontWeight="Bold"/>

                    <CheckBox Name="cbHoursPlayed" Content="Hours Played" HorizontalAlignment="Left" Margin="29,50,0,0" 
                  VerticalAlignment="Top" Unchecked="cbChanged" Checked="cbChanged" Foreground="{StaticResource TextColor}"/>
                    <CheckBox x:Name="cbHoursPlayedLast2Weeks" Content="Last 2 Weeks" HorizontalAlignment="Left" Margin="29,80,0,0" 
                  VerticalAlignment="Top" Unchecked="cbChanged" Checked="cbChanged" Foreground="{StaticResource TextColor}"/>

                    <Label Content="Tag Application Method:" HorizontalAlignment="Left" Margin="8,126,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}"/>
                    <ComboBox x:Name="cbxTagMethod" HorizontalAlignment="Left" Margin="155,130,0,0" VerticalAlignment="Top" Width="123" SelectionChanged="ComboBox_SelectionChanged" 
                  BorderThickness="0" Height="20" >
                        <ComboBoxItem>Contains All</ComboBoxItem>
                        <ComboBoxItem>Contains One</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="User Information">
                <Grid>
                    <Border CornerRadius="6"
        	        BorderBrush="{StaticResource BordersColor}"
        	        BorderThickness="2"
                    Margin="5,30,5,56"
                    MouseDown="MouseDownOnWindow"/>

                    <Label Content="USER INFORMATION" HorizontalAlignment="Left" Margin="8,2,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}" FontSize="16" FontWeight="Bold"/>

                    <TextBox x:Name="txtUserID" HorizontalAlignment="Left" Height="26" Margin="86,43,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="190"/>
                    <TextBox x:Name="txtSteamPath" HorizontalAlignment="Left" Height="26" Margin="86,74,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="190"/>

                    <Label Content="User Name:" HorizontalAlignment="Left" Margin="13,43,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}"/>
                    <Label Content="Steam Path:" HorizontalAlignment="Left" Margin="13,74,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}"/>

                    <Button Content="Browse" BorderThickness="0"
			         HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" Height="25" 
			         Width="65" x:Name="btnBrowse" SnapsToDevicePixels="True" Margin="0,0,12.667,10" Click="btnBrowseClicked" />
                </Grid>
            </TabItem>
        </TabControl>


        <Button Content="Accept" BorderThickness="0" Canvas.Left="478" Canvas.Top="320" 
			HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" Height="25" 
			Width="65" x:Name="btnAccept" SnapsToDevicePixels="True" Margin="0,0,20,12" Click="btnAcceptClicked"/>

        <Button Content="Cancel" BorderThickness="0"
			HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" Height="25" 
			Width="65" x:Name="btnCancel" SnapsToDevicePixels="True" Margin="0,0,99,12" Click="btnCancelClicked" />


    </Grid>
</Window>
