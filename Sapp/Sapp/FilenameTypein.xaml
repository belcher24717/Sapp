<Window x:Class="Sapp.FilenameTypein"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsScreen" Height="80" Width="240" WindowStyle = "None" 
        AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle HorizontalAlignment="Stretch" Name="MainRectangle" VerticalAlignment="Stretch"
                   Canvas.Left="0" Canvas.Top="0" Fill="{StaticResource PrimaryColor}" MouseDown="MouseDownOnWindow"/>
        
        <TextBox Name="txtFileName" HorizontalAlignment="Left" Height="23" Margin="76,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="152"/>
        
        <Label Name="lblFileName" Content="File Name:" HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}"/>

        <Button Content="Cancel" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
			HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" Height="25" 
			Width="65" x:Name="btnCancel" Background="{StaticResource ButtonColor}" SnapsToDevicePixels="True" Margin="0,0,12,12" Click="btnCancelClicked" 
            Foreground="{StaticResource TextColor}"/>
        <Button Content="Save" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
			HorizontalAlignment="Right" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" FlowDirection="LeftToRight" Height="25" 
			Width="65" x:Name="btnSave" Background="{StaticResource ButtonColor}" SnapsToDevicePixels="True" Margin="0,0,84,12" Click="btnSaveClicked" 
            Foreground="{StaticResource TextColor}"/>


    </Grid>
</Window>
